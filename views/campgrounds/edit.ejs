                    <input class="form-control" type="text" name="campground[image]"value="<%=campground.image%>">
                </div>
                <div>
                    <input class="form-control" type="text" name="campground[descr]" value="<%=campground.desc%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lrg btn-default btn-primary btn-block"type="submit">Submit</button>
                </div>
            </form>
                    <a href="/campgrounds">BACK</a>
        </div>
    </div>
</div>


